<Window x:Class="Ants.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <!--<GradientStop Offset="0.0" Color="#FF0060C0"/>-->
                <GradientStop Offset="1.0" Color="#FF001020"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid x:Name="HeadGrid">
        </Grid>
        <Grid Grid.Row="1" x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="MapGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid x:Name="MapViewGrid" />
                <Grid Grid.Row="1" x:Name="MapConfigGrid"></Grid>
            </Grid>
            <Grid Grid.Column="1" x:Name="ConfigGrid">
            
            </Grid>

        </Grid>
    </Grid>
</Window>
